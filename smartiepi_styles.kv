#:kivy 1.10.1

#root level styles
#:set root_bg_color (.02, .06, .24, 1) #rgb(5,15,60)
#:set actionbar_bg_color (.05, .12, .24, 1) #rgb(12,31,60)
#:set actionbar_color (.15, .47, .77,1) #2579c5
#:set default_text (1, 1, 1,1)
#:set default_button_bg (.21, .38, .57,1) #rgb(54,96,145)


#mainscreen
#:set messageview_bg_color (.12, .74, 1, 1) #rgb(30,188,255)
#:set mainscreen_bg_color (.02, .06, .24, 1) #rgb(5,15,60)
#:set mainscreen_warning (1, .58, .12, 1) #rgb(254,148,30)
#:set mainscreen_alert (.65, 0, 0, 1) #rgb(166,1,1)



<ActionBarButton@Button>:
    font_name: 'Font-Awesome-Solid.ttf'
    font_size: '30dp'
    color: actionbar_color
    size_hint_x: None
    width: self.height
    background_normal: 'images/ab_button1.png'

<ActionBarToggleButton@ToggleButton>:
    font_name: 'Font-Awesome-Solid.ttf'
    font_size: '30dp'
    color: actionbar_color
    size_hint_x: None
    width: self.height
    background_normal: 'images/ab_button1.png'

<DefaultButton@Button>:
    font_name: 'Font-Awesome-Solid.ttf'
    font_size: '30dp'
    color: default_text
    size_hint_x: None
    width: self.height
    background_normal: 'images/button_default.png'