#:kivy 1.10.1

<ActionPreviousNoIcon@ActionPrevious>
    with_previous: False
    title: '' ## Try placing text here, only a few pixels should show
    size_hint: None, None
    size: 0, 0

BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size 
    
    ActionBar:

        ActionView:
            id: av
            ActionPreviousNoIcon:
                on_press: print(self) ## method that will not be called easily
            ActionButton:
                font_name: 'Font-Awesome-Solid.ttf'
                text: u'\uf013' #cog

    ScreenManager:
        id: sm

    ActionBar:

        ActionView:
            id: av
            ActionPreviousNoIcon:
                on_press: print(self) ## method that will not be called easily
            ActionButton:
                font_name: 'Font-Awesome-Solid.ttf'
                text: u'\uf011' #power on/off
    