#:kivy 1.10.1
#:include smartiepi_styles.kv

<SmartiePiScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: False if root.fullscreen else (content.height > root.height - dp(16))
        AnchorLayout:
            size_hint_y: None
            height: root.height if root.fullscreen else max(root.height, content.height)
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (1, 1) if root.fullscreen else (.8, None)
                height: self.height if root.fullscreen else self.minimum_height

<BatteryStatus@FloatLayout>:
    size: root.size
    canvas.before:
        Color:
            rgba: 0, 0, 1, 0
        Rectangle:
            size: root.width, root.height
            pos: root.pos
    Bubble:
        size_hint: (None, None)
        pos: root.pos
        size: 200, 200
        
        show_arrow: False
        orientation: 'vertical'
        background_image: 'atlas://images/smartiepi/ab_button1'
        Label:
            font_name: 'Font-Awesome-Solid.ttf'
            font_size: '140dp'
            text: u'\uf240' #battery
            color: default_text
        Label: 
            text: 'Battery Status: Full'
            color: default_text

<VolumeControl@FloatLayout>:
    size: root.size
    canvas.before:
        Color:
            rgba: 0, 0, 1, 0
        Rectangle:
            size: root.width, root.height
            pos: root.pos
    Bubble:
        size_hint: (None, None)
        #size: (560, 50)
        #pos_hint: {'top': 1, 'y': .4}
        pos: root.pos
        size: root.size
        show_arrow: False
        orientation: 'vertical'
        background_image: 'atlas://images/smartiepi/ab_button1'

        Slider: 
            id: volume_slider
            max: 255
            orientation: 'vertical'
            background_vertical: 'atlas://images/smartiepi/ab_button1'
            background_width: '3sp'
            on_value: root.volume_value_changed(self.value)
            on_touch_up: root.volume_touch_up()



<PowerMenu@FloatLayout>:
    size: root.size
    canvas:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            size: self.width, self.height
    Bubble:
        size_hint: (None, None)
        pos: root.pos
        size: 160, 200
        show_arrow: False
        orientation: 'vertical'
        background_image: 'atlas://images/smartiepi/ab_button1' 
        BubbleButton:
            text: 'Exit'
            on_release: root.power_exit()
            background_normal: 'atlas://images/smartiepi/ab_button1'
            background_down: 'atlas://images/smartiepi/button_default'

        BubbleButton:
            text: 'Shutdown'
            on_release: root.power_shutdown()
            background_normal: 'atlas://images/smartiepi/ab_button1'
            background_down: 'atlas://images/smartiepi/button_default'

        BubbleButton:
            text: 'Restart'
            on_release: root.power_restart()
            background_normal: 'atlas://images/smartiepi/ab_button1'
            background_down: 'atlas://images/smartiepi/button_default'




<SmartieActionBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '48dp'
    padding: '2dp'
    spacing: '2dp'
    canvas:
        Color:
            rgb: actionbar_bg_color
        Rectangle:
            pos: self.pos
            size: self.size

<SmartiePiHub>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size #without this the layout does not expand to fill space
        canvas.before:
            Color:
                rgb: root_bg_color
            Rectangle:
                size: root.size 
                pos: self.pos

        SmartieActionBar: #top action bar
            ActionBarButton:
                text: u'\uf013' #cog
            Label:
                font_name: 'freedom.ttf'
                font_size: '40dp'
                text: 'SmartiePi Hub' 
                color: default_text
            Image:
                size_hint_x: None
                size: self.size
                pos: self.pos
                source: 'atlas://images/smartiepi/sp_logo'

        ScreenManager:
            id: sm

        SmartieActionBar: #bottom action bar
            ActionBarToggleButton:
                text: u'\uf011' #power
                on_release: self.show_power_menu()
            Label:
                text: 'System Health:' #this acts as a spacer between left and right buttons
                color: default_text
            ActionBarToggleButton:
                text: u'\uf240' #battery
                on_release: self.show_battery_status()
            ActionBarToggleButton:
                id: toggle_volume
                text: u'\uf028' #volume
                on_release: self.show_volume_control()
            ActionBarToggleButton:
                text: u'\uf1eb' #wifi
                on_release: self.toggle_wifi()
            Label:
                id: date_and_time
                text: ''
                size_hint_x: None
                color: default_text
            

        
        
        

 