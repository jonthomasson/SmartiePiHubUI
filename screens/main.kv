#:kivy 1.10.1
#:include smartiepi_styles.kv

<MessageView>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '48dp'
    padding: '2dp'
    spacing: '4dp'
    canvas:
        Color:
            rgb: messageview_bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: root.Node
        color: default_text
    Label:
        text: root.Message
        color: default_text
    Label:
        text: root.TimeStamp
        color: default_text
    DefaultButton:
        text: u'\uf06e' #eye
        on_release: root.view_node_message(root.ScreenName, root.NodeMessageId)
    DefaultButton:
        text: u'\uf1f8' #trash
        on_release: root.delete_node_message(root.NodeMessageId)

MainScreen:
    name: 'Main'
    id: main_screen

    TabbedPanel:
        id: tp
        do_default_tab: False
        TabbedPanelItem:
            id: tab_messages
            font_name: 'Font-Awesome-Solid.ttf'
            font_size: '30dp'
            text: u'\uf05a' #info circle
            background_normal: 'atlas://images/smartiepi/button_default'
            background_down: 'atlas://images/smartiepi/tab_selected'
            BoxLayout:
                orientation: 'vertical'
                padding: '4dp'
                canvas:
                    Color:
                        rgb: mainscreen_bg_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MainRecycleView:
                    id: main_view_info
                    viewclass: "MessageView"
                    
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: '4dp'
                    
                        canvas:
                            Color:
                                rgba: 0, 0, 1
                            Rectangle:

                                pos: self.pos
                                size: self.size
                
            
            
        TabbedPanelItem:
            id: tab_warnings
            font_name: 'Font-Awesome-Solid.ttf'
            font_size: '30dp'
            text: u'\uf071' #exclamation triangle
            color: mainscreen_warning
            background_normal: 'atlas://images/smartiepi/button_default'
            background_down: 'atlas://images/smartiepi/tab_selected'
            BoxLayout:
                orientation: 'vertical'
                padding: '4dp'


                canvas:
                    Color:
                        rgb: 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MainRecycleView:
                    id: main_view_warn
                    viewclass: "MessageView"
                    
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: '4dp'
                    
                        canvas:
                            Color:
                                rgba: 0, 0, 1
                            Rectangle:

                                pos: self.pos
                                size: self.size
        TabbedPanelItem:
            id: tab_warnings
            font_name: 'Font-Awesome-Solid.ttf'
            font_size: '30dp'
            text: u'\uf06a' #exclamation circle
            color: mainscreen_alert
            background_normal: 'atlas://images/smartiepi/button_default'
            background_down: 'atlas://images/smartiepi/tab_selected'
            BoxLayout:
                orientation: 'vertical'
                padding: '4dp'
                canvas:
                    Color:
                        rgb: 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MainRecycleView:
                    id: main_view_alert
                    viewclass: "MessageView"
                    
                    RecycleBoxLayout:
                        default_size: None, dp(56)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
