#:kivy 1.10.1

<MessageDefault>:
    orientation: 'vertical'
    padding: '4dp'

    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

SmartiePiScreen:
    name: 'MessageDefault'

    MessageDefault:
        

        BoxLayout:
            orientation: 'horizontal'
            padding: '4dp'

            canvas:
                Color:
                    rgb: 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label: 
                text: "Node: {}".format(self.parent.parent.time_stamp)