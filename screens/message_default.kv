#:kivy 1.10.1

<MessageDefault>:
    orientation: 'vertical'
    padding: '4dp'

    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

MessageDefaultScreen:
    name: 'MessageDefault'

    MessageDefault:
        

        BoxLayout:
            orientation: 'vertical'
            padding: '4dp'

            canvas:
                Color:
                    rgb: 0, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label: 
                text: "Node: {}".format(self.parent.parent.parent.node_name)
            Label: 
                text: "Description: {}".format(self.parent.parent.parent.node_description)
            Label: 
                text: "Message: {}".format(self.parent.parent.parent.node_message)
            Label: 
                text: "TimeStamp: {}".format(self.parent.parent.parent.time_stamp)
            Button:
                text: "Back"
                on_release: self.parent.parent.parent.back_to_messages()